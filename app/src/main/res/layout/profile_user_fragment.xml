<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ProfileFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewUserAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="User Account"
        android:textColor="#212CF8"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageViewProfilePictureUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDateTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Name: "
            android:textColor="@color/barber_color"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"/> />

        <TextView
            android:id="@+id/textViewFullNameProfileUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="your_name"
            android:textColor="#2C2C2C"
            android:fontFamily="sans-serif"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTimeTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Email: "
            android:textColor="@color/barber_color"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"/> />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="your_email"
            android:textColor="#2C2C2C"
            android:fontFamily="sans-serif"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPhoneTitleItemUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Phone:"
            android:textColor="@color/barber_color"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewUserPhoneItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="your_phone"
            android:textColor="#2C2C2C"
            android:fontFamily="sans-serif"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewAppointmentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="My appointments"
        android:textColor="#2C2C2C"
        android:fontFamily="sans-serif-black"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/listViewUserAppointments"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>